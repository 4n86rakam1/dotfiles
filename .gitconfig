# create ".gitconfig.user" for user name and email
[include]
	path = .gitconfig.user
[core]
	editor = vim -c \"set fenc=utf-8\"
[color]
	ui = true
[alias]
	# graph
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	st = status
	cm = commit
	cmm = commit -m
	cmam = commit -am
	cmae = commit --allow-empty -m 'Initialize repository'
	ch = checkout
	chb = checkout -b
	br = branch
	brd = branch -d
	me = merge
